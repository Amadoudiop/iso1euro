{% extends 'base_back.html.twig' %}
{% block title %}{{ parent() }}Status{% endblock %}

{% block body %}
    <!-- header Page -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body app-heading">
                    <img class="profile-img" src="http://placehold.it/150x150">
                    <div class="app-title">
                        <div class="title"><span class="highlight">Status</span></div>
                        <div class="description">liste des status</div>
                    </div>
                    <a href="{{ path('statusNew') }}">
                        <button type="button" class="btn btn-success">Nouveau status</button>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                </div>
                <div class="card-body no-padding">
                    <table class="datatable table table-striped primary" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th>label</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for status in statuses %}
                            <tr>
                                <td style="background-color:{{ status.color }}">{{ status.label }}</td>
                                <td></td>
                                <td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path('statusEdit', { 'id': status.id }) }}">
                                                <button type="button" class="btn btn-warning">Edit</button>
                                            </a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}