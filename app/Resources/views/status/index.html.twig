{% extends 'base_back.html.twig' %}

{% block body %}
    <h1>Statuses list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Color</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for status in statuses %}
            <tr>
                <td><a href="{{ path('statusShow', { 'id': status.id }) }}">{{ status.id }}</a></td>
                <td>{{ status.label }}</td>
                <td>{{ status.color }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('statusShow', { 'id': status.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('statusEdit', { 'id': status.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('statusNew') }}">Create a new status</a>
        </li>
    </ul>
{% endblock %}
