
{% extends 'base_back.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('css/color-picker.min.css') }}" rel="stylesheet">
{% endblock %}


{% block title %}{{ parent() }}Nouvelle Systeme de chaleur{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body app-heading">
                    <img class="profile-img" src="http://placehold.it/150x150">
                    <div class="app-title">
                        <div class="title"><span class="highlight">Cr√©ation d'un Status</span></div>
                        <div class="description">Ajout d'un nouveau status</div>
                    </div>
                    <a href="{{ path('statusIndex') }}">
                        <button type="button" class="btn btn-info">
                            <i class="fa fa-reply" aria-hidden="true"></i>
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="col-md-9">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <input type="submit" value="Create" class="btn btn-primary">
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    <script src="{{ asset('js/color-picker.min.js') }}"></script>
    <script>
        var picker = document.querySelector('#appbundle_status_color');
        picker = new CP(picker);

        picker.on("change", function(color) {
            color = '#' + color;
            this.target.value = color;
            $('#color_square').css('background-color', color);
        });
    </script>
{% endblock %}