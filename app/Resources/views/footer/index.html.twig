{% extends 'base.html.twig' %}

{% block body %}
    <h1>Footers list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Twitter_link</th>
                <th>Facebook_link</th>
                <th>Linkedin_link</th>
                <th>Copyright</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for footer in footers %}
            <tr>
                <td><a href="{{ path('footer_show', { 'id': footer.id }) }}">{{ footer.id }}</a></td>
                <td>{{ footer.twitterlink }}</td>
                <td>{{ footer.facebooklink }}</td>
                <td>{{ footer.linkedinlink }}</td>
                <td>{{ footer.copyright }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('footer_show', { 'id': footer.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('footer_edit', { 'id': footer.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('footer_new') }}">Create a new footer</a>
        </li>
    </ul>
{% endblock %}
